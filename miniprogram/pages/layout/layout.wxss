/* pages/recommend/recommend.wxss */

.recommend {
  width: 100%;
  height: 100%;
  overflow: hidden;
  position: relative;
}

.recommend__row {
  flex: 1;
}

.recommend__top {
  height: 36px;
  line-height: 36px;
  text-align: center;
  font-size: 14px;
  display: flex;
  flex-direction: row;
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  z-index: 88;
  background: var(--background-color);
}

.recommend__container {
  height: 100%;
}

.active {
  color: #2884f4;
  font-weight: 900;
}

.recommend__dot {
  position: fixed;
  right: 20px;
  bottom: 20px;
  border-radius: 50%;
  z-index: 10;
  width: 30px;
  height: 30px;
  border: 1px solid  #eee;
  background: var(--avatar-bg);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 12px;
  color: #999;
  font-weight: 700;
  transform: translateY(52px);
  transition: transform 0.3s cubic-bezier(0.465, 0.183, 0.153, 0.946);
}

.recommend__dot--img {
  width: 15px;
  height: 15px;
}

.recommend__share {
  position: fixed;
  right: 20px;
  bottom: 60px;
  z-index: 99;
  border: 1px solid  #eee;
  border-radius: 50%;
  width: 30px;
  height: 30px;
  background: var(--avatar-bg);
  display: flex;
  align-items: center;
  justify-content: center;
  transform: translateY(52px);
  transition: transform 0.3s cubic-bezier(0.465, 0.183, 0.153, 0.946);
}

.recommend__post {
  position: fixed;
  right: 20px;
  bottom: 60px;
  z-index: 99;
  border: 1px solid  #eee;
  border-radius: 50%;
  width: 30px;
  height: 30px;
  background: var(--avatar-bg);
  display: flex;
  align-items: center;
  justify-content: center;
  transform: translateY(52px);
  transition: transform 0.3s cubic-bezier(0.465, 0.183, 0.153, 0.946);
}

.recommend__link {
  padding: 0;
  width: 30px;
  height: 30px;
  line-height: 30px;
  font-size: 12px;
  color: #999;
  border-radius: 50%;
}

.dark {
  background: #111;
  --background-color: #111;
  --title-color: #d0d0d0;
  --content-color: #555555;
  --grey-color: #191919;
  --avatar-bg: #000;
  --loading-color: #000;
}

.light {
  background: #f6f6f6;
  --background-color:  #f6f6f6;
  --title-color: #333;
  --content-color: #333;
  --grey-color: #fff;
  --avatar-bg: #eee;
  --loading-color: #999;
}
