.home-page {
  position: relative;
  width: 100%;
  height: 100%;
}

.home-page__container {
  position: absolute;
  bottom: 50px;
  left: 50%;
  transform: translate3d(-50%, 0, 0);
  display: flex;
  flex-direction: row;
  align-items: center;
}

.home-page__container--img {
  width: 36px;
  height: 36px;
  border-radius: 50%;
  margin-right: 12px;
}

.home-page__container--title {
  font-size: 23px;
  white-space: nowrap;
  font-weight: 900;
}