<view>
  <scroll-view
    refresher-triggered="{{triggered}}"
    bindscrolltolower="handleTolower"
    bindrefresherrefresh="handleRefresh"
    refresher-enabled="true"
    scroll-y="true"
    class="recommend__center recommend__center--one"
    scroll-top="{{top}}"
    scroll-with-animation="true"
    bindscroll="handleScroll"
  >
    <view wx:for="{{recommendList}}" wx:key="msg_id" class="recommend__item">
      <view class="recommend__hader">
        <view class="recommend__avatar"></view>
        <view>{{item.author_user_info.user_name}}</view>
      </view>
      <view wx:if="{{item.msg_Info.pic_list.length<2}}">
        <view class="recommend__content">
          <text user-select="true">{{item.msg_Info.content}}</text>
        </view>
        <view>
          <view
            wx:for="{{item.msg_Info.pic_list}}"
            wx:key="index"
            wx:for-item="picture"
            class="recommend__picture"
          >
            <image
              bindtap="previewImage"
              data-src="{{picture}}"
              data-urls="{{item.msg_Info.pic_list}}"
              mode="widthFix"
              src="{{picture}}"
            />
          </view>
        </view>
      </view>
      <view wx:if="{{item.msg_Info.pic_list.length>1}}">
        <view class="recommend__content">
          <text user-select="true">{{item.msg_Info.content}}</text>
        </view>
        <view class="recommend__img">
          <view
            wx:for="{{item.msg_Info.pic_list}}"
            wx:key="index"
            wx:for-item="picture"
            class="recommend__img--list"
          >
            <image
              bindtap="previewImage"
              data-src="{{picture}}"
              data-urls="{{item.msg_Info.pic_list}}"
              mode="widthFix"
              src="{{picture}}"
              class="recommend__img--list"
            />
          </view>
        </view>
      </view>
      <view class="recommend__footer">来自：掘金</view>
    </view>
    <view class="recommend__loading">加载中...</view>
  </scroll-view>
</view>