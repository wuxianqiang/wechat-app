
.recommend__item {
  margin-bottom: 10px;
  background: var(--grey-color);
}

.recommend__avatar {
  width: 30px;
  height: 30px;
  border-radius: 50%;
  margin-right: 12px;
  background: var(--avatar-bg);
}

.recommend__hader {
  display: flex;
  flex-direction: row;
  padding: 20px;
  align-items: center;
  font-size: 16px;
  font-weight: 900;
  color: var(--title-color);
}

.recommend__content {
  padding: 0 20px 10px 20px;
  white-space: wrap;
  word-break: break-all;
  font-size: 14px;
  color: var(--content-color);
}

.recommend__center {
  width: 100%;
  height: calc(100% - 36px);
  position: absolute;
  left: 0;
  top: 36px;
}

.recommend__center--three {
  transform: translateX(200%);
}

.recommend__picture {
  background: var(--avatar-bg);
  margin: 0 20px 10px 20px;
  height: 190px;
}

.recommend__picture--img {
  width: 100%;
  height: 190px;
}

.recommend__footer {
  font-size: 10px;
  line-height: 30px;
  color: var(--loading-color);
  padding: 0 20px;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.recommend__loading {
  font-size: 14px;
  line-height: 30px;
  color: var(--loading-color);
  text-align: center;
}
