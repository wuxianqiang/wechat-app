/* pages/recommend/recommend.wxss */

.recommend {
  width: 100%;
  height: 100%;
  overflow: hidden;
  position: relative;
}

.recommend__item {
  margin-bottom: 10px;
  background: var(--grey-color);
}

.recommend__avatar {
  width: 30px;
  height: 30px;
  border-radius: 50%;
  margin-right: 12px;
}

.recommend__hader {
  padding: 20px 20px 20px 20px;
  align-items: center;
  color: var(--title-color);
}

.recommend__hader--title {
  font-size: 16px;
  font-weight: 900;
}

.recommend__hader--subtitle {
  font-size: 12px;
  color: #999;
}

.recommend__content {
  padding: 0 20px 10px 20px;
  white-space: wrap;
  word-break: break-all;
  font-size: 14px;
  color: var(--content-color);
}

.recommend__picture {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 20px 20px 20px;
  height: 144px;
  overflow: hidden;
  background: #eee;
}

.recommend__picture--img {
  width: 100%;
}

.recommend__top {
  height: 36px;
  line-height: 36px;
  text-align: center;
  font-size: 14px;
  display: flex;
  flex-direction: row;
  box-shadow: 0 1px 5px rgba(150, 150, 150, 0.3);
  position: fixed;
  left: 0;
  top: 0;
  background: #f6f6f6;
  width: 100%;
  z-index: 88;
}

.recommend__row {
  flex: 1;
}

.recommend__center {
  width: 100%;
  height: calc(100% - 36px);
  position: absolute;
  left: 0;
  top: 36px;
  will-change: transform;
  transition: transform 0.3s cubic-bezier(0.465, 0.183, 0.153, 0.946);
}

.recommend__center--two {
  transform: translateX(100%);
}
.recommend__center--three {
  transform: translateX(200%);
}
.recommend__center--four {
  transform: translateX(300%);
}
.recommend__container {
  height: 100%;
  transition: transform 0.3s cubic-bezier(0.465, 0.183, 0.153, 0.946);
}

.recommend__footer {
  font-size: 10px;
  line-height: 30px;
  color: #999;
  padding: 0 20px;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.recommend__loading {
  font-size: 14px;
  line-height: 30px;
  color: #999;
  text-align: center;
}

.active {
  color: #30ca96;
}

